<section>
  <h2>Edit Book</h2>
    <form action="/book/edit/{{book.id}}" method="post">
      <label for="title">Title</label>
      <input id="title" type="text" name="title" value="{{book.title}}">
      <label for="genre">Genre</label>
      <select id="genre" name="genre_id">
        {{#each genre}}
        <option selected value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
      <label for="description">Description</label>
      <textarea id="description" type="text" name="description" value="{{book.description}}"></textarea>
      <label for="cover_url">Book Cover Image URL</label>
      <input id="cover_url" type="url" name="cover_url" value="{{book.cover_url}}">
      <input type="submit" value="Edit Book">
    </form>
</section>
